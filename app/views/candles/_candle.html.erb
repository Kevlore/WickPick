<div class="card">
    <div class="card-content">
      <p class="title is-5"><%= link_to candle.scent, candle%></p>
      <P class="subtitle">Type: <%= candle.type.type_name%></P>
      <p class="subtitle">Price: <%= number_to_currency candle.price %></p>
    </div>
    <% if candle.image.present? %>
      <div class="card-image">
        <figure class="image">
          <%= image_tag candle.image, style: 'height:200px;width:130px'%>
        </figure>
      </div>
    <% end %>
    <%= form_with url: checkout_create_path(format: :js), remote: true do %>
      <%= hidden_field_tag(:candle_id, candle.id) %>
      <%= button_tag 'Purchase' %>
    <% end %>
</div>